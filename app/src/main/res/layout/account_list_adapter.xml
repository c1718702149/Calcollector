<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/line_no"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@color/no_background"/>
    <TextView
        android:id="@+id/account_updated_date"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="16"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/list_background"
        android:textSize="12sp"
        android:textColor="@color/font_color"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/account_owner"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="20"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:textSize="12sp"
        android:textColor="@color/font_color"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/account_total_amount"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:gravity="right|center_vertical"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:textSize="12sp"
        android:textColor="@color/font_color"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/account_status"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:background="@color/account_unpaid"/>
</LinearLayout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nocompany.calcollector.AccountAddActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:src="@drawable/logo_user"/>
            <TextView
                android:id="@+id/textview_account_owner_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textSize="22sp"
                android:text="@string/default_string"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:src="@drawable/logo_calendar"/>
            <TextView
                android:id="@+id/textview_account_create_date"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:text="@string/default_string"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/imagebutton_account_daily"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_add_1_daily"
                android:background="@drawable/borders"/>
            <ImageButton
                android:id="@+id/imagebutton_account_weekly"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_add_2_weekly"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/imagebutton_account_monthly"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_add_3_monthly"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1">
            <ImageButton
                android:id="@+id/imagebutton_account_fixed"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_add_4_fix"
                android:background="@drawable/borders" />
            <ImageButton
                android:id="@+id/imagebutton_account_flexi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_add_5_flexi"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_account_amount"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_account_amount"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="number"
                android:hint="0" />
            <TextView
                android:id="@+id/textview_account_amount_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_account_disbursement"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_account_disbursement"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="number"
                android:hint="0" />
            <TextView
                android:id="@+id/textview_account_disbursement_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_account_installment"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_account_installment"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="number"
                android:hint="0" />
            <TextView
                android:id="@+id/textview_account_installment_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_account_duration"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp"
            android:visibility="invisible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_account_length"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_account_length"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="number"
                android:hint="0" />
            <TextView
                android:id="@+id/textview_account_length_unit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:gravity="center"
                android:text="Day(s)"/>
            <TextView
                android:id="@+id/textview_account_length_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/button_reset_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button_background"
                android:textColor="@color/font_color"
                android:text="Reset" />
            <Button
                android:id="@+id/button_save_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button_contrast_background"
                android:textColor="@color/button_contrast_font_color"
                android:text="Save"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
     </LinearLayout>
</ScrollView>

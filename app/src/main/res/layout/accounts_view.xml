<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_accountlist_id"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginBottom="10dp"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/linearlayout_accountlist_type"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:background="@color/list_background">
        <ImageView
            android:id="@+id/imageview_accountlist_type_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/account_line_type1_1_daily"/>
        <ImageView
            android:id="@+id/imageview_accountlist_type_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/account_line_type2_1_fixed"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview_accountlist_date"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="16"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:text="@string/default_string"
        android:textSize="12sp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/textview_accountlist_amount"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="13"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:text="@string/default_string"
        android:textSize="12sp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/textview_accountlist_status"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:background="@color/account_unpaid"/>
</LinearLayout>
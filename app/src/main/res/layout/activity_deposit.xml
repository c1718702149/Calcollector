<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nocompany.calcollector.DepositActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearlayout_deposit_no_record"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Record Not Found!"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_depositList_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="14sp"
                android:text="Details"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/list_background"
                android:textSize="14sp"
                android:text="In"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/list_background"
                android:textSize="14sp"
                android:text="Out"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_depositList_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_depositList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_depositList_subfooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="right|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:text="Sub Total: "/>
            <TextView
                android:id="@+id/textview_deposit_subintotal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/textview_deposit_subouttotal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_depositList_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="right|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:text="Total: "/>
            <TextView
                android:id="@+id/textview_deposit_total"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

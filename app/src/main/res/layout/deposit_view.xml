<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_accountlist_id"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginBottom="10dp"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/line_no"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@color/no_background"/>
    <LinearLayout
        android:id="@+id/linearlayout_accountlist_details"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:background="@color/list_background">
        <ImageView
            android:id="@+id/imageview_accountlist_type_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/account_line_type1_1_daily"/>
        <ImageView
            android:id="@+id/imageview_accountlist_type_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/account_line_type2_1_fixed"/>
        <TextView
            android:id="@+id/textview_accountlist_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/default_string"
            android:textSize="12sp"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview_accountlist_amount_in"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:text="@string/default_string"
        android:textSize="12sp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/textview_accountlist_amount_out"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/list_background"
        android:text="@string/default_string"
        android:textSize="12sp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/textview_accountlist_status"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:background="@color/account_unpaid"/>
</LinearLayout>
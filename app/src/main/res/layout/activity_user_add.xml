<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fillViewport="true"
    tools:context="com.nocompany.calcollector.UserAddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/logo_user"/>
            <EditText
                android:id="@+id/edittext_username"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:background="@color/list_background"
                android:hint="Name"
                android:textSize="22sp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890[|] ">
                <requestFocus />
            </EditText>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textview_username_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_ic_no_title"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_ic"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="12"/>
            <TextView
                android:id="@+id/textview_ic_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_contact_no_title"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edittext_contact_no"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@color/list_background"
                android:textSize="16sp"
                android:textColor="@color/edittext_font_color"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="10"/>
            <TextView
                android:id="@+id/textview_contact_no_validator"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Address:"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Street No:"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edittext_address_streetno1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:background="@color/list_background"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_font_color"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789/,- "/>
                <TextView
                    android:id="@+id/textview_address_streetno1_validator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"/>
                <EditText
                    android:id="@+id/edittext_address_streetno2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:background="@color/list_background"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_font_color"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789/,- "/>
                <TextView
                    android:id="@+id/textview_address_streetno2_validator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Postcode:"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edittext_address_postcode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:background="@color/list_background"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_font_color"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="5"/>
                <TextView
                    android:id="@+id/textview_address_postcode_validator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_city"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/editext_address_city"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:background="@color/list_background"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_font_color"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ " />
                <TextView
                    android:id="@+id/textview_address_city_validator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_state"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/spinner_address_state"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:spinnerMode="dialog"
                    android:prompt="@string/prompt_malaysia_states"
                    android:entries="@array/array_malaysia_states"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/button_reset_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button_background"
                android:textColor="@color/font_color"
                android:text="Reset" />
            <Button
                android:id="@+id/button_save_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button_contrast_background"
                android:textColor="@color/button_contrast_font_color"
                android:text="Save"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

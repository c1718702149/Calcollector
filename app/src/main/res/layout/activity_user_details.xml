<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nocompany.calcollector.UserDetailsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearlayout_username"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_user"/>
            <TextView
                android:id="@+id/textview_username"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:text="@string/default_string"
                android:textSize="22sp"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/imageview_user_edit"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/user_detail_edit"
                android:padding="5dp"
                android:contentDescription="@string/action_edit" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_ic"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_ic_no_title"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/textview_ic"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/default_string"
                android:textSize="16sp"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_contact_no"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/list_background"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/textview_contact_no_title"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/textview_contact_no"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/default_string"
                android:textSize="16sp"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_address"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:id="@+id/linearlayout_address_title"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Address"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_address_streetno1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Street No:"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/textview_address_streetno1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/default_string"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_address_streetno2"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/textview_address_streetno2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/default_string"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_address_postcode"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Postcode:"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/textview_address_postcode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/default_string"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_address_city"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_city"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/textview_address_city"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/default_string"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_address_state"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/list_background"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_state"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/textview_address_state"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/default_string"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_accounts"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/linearlayout_accounts_title"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_accounts_title"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6"/>
                <ImageView
                    android:id="@+id/imageview_account_add"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/user_detail_add"
                    android:padding="5dp"
                    android:contentDescription="@string/action_add" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_accounts_no_record"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/textview_accounts_no_record"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/imageview_account_add_handcursor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:contentDescription="@string/hand_pointing_up" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_accounts_header"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:background="@color/list_background"
                    android:text="@string/textview_type"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="16"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/list_background"
                    android:text="@string/textview_date_title"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="13"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/list_background"
                    android:text="@string/textview_amount_title"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_account_list"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_accounts_audit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="16"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="Received:"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/textview_account_in"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="13"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="15dp"
                        android:typeface="monospace"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="Paid:"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/textview_account_out"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="13"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="15dp"
                        android:typeface="monospace"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="Balance:"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/textview_account_total"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="13"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:typeface="monospace"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
     </LinearLayout>
</ScrollView>
